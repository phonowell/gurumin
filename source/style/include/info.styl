#layer-info
  position absolute
  z-index 128
  width 100%
  height auto
  text-align center
  top auto
  bottom 96px
  pointer-events none
  word-break break-all

  .item
    display inline-block
    background-color rgba(#000, 0.8)
    color #fff
    margin 0 auto 0.5em
    padding 0.5em 1em
    border-radius 2px
    max-width 80%
    font-size 14px
    line-height 1.5
    animation-duration 350ms

    &.with-icon
      position relative
      padding-left 3em
      padding-right 1em

      &.with-break
        text-align left
        padding-left 4em

        .icon:first-child
          left 1.5em
          margin-right 1.5em

      .icon:first-child
        position absolute
        left 1em
        top 50%
        margin-right 1em
        transform translateY(-50%) scale(1.5)