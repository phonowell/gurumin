.list-content
  transform translateZ(0)
  background-color #fff

  .orientation-landscape &
    .a
      width 144px
      background-size cover

  .theme-night &
    background-color #666

    .date
      border-color #555
      color #999
      background-color #555

    .item
      border-color #555

  .date
    display block
    color #999
    background-color #f9f9f9
    margin -1px 0 0
    padding 0 12px
    font-size 12px
    height 32px
    line-height @height
    white-space normal

    &:first-of-type
      margin-top 0

  .alert
    margin 12px

  .item
    display block
    text-align left
    padding 12px 12px 0

    &:after
      content ''
      display block
      height 11px
      border-bottom 1px solid #eee
      margin-top 12px
      clear both

    .theme-night &
      &:after
        border-color #555

      &:visited
        h1
          color #ddd
        h2
          color #ccc

      h1
        color #fff
      h2
        color #eee

    &:visited
      h1
        color #999
      h2
        color #ccc

    &:active
      background-color rgba(#000, 0.05)

    &.img-hidden
      pointer-events none
      .a
        background-image none !important

  .a
    background rgba(#000, 0.1) center center no-repeat
    background-size cover
    width 96px
    height @width * 0.75
    float right
    margin-left 16px

  h1
    font-size 17px
    line-height 1.5
    color #333
    word-break break-all

  h2
    font-size 14px
    line-height 1.5
    color #666

  p
    font-size 14px
    line-height 1.5
    color #666
    margin-top 0.5em
    text-overflow ellipsis
    max-height 3em
    overflow hidden
    white-space pre-wrap

.list-block

  .theme-night &
    .block
      background-color #666
      color #ccc

    .item
      border-color #555
      color #ddd

      &:last-of-type
        border-color @border-color

    .r
      color #999

  .block
    background-color #fff
    margin-bottom 24px

  .item
    display block
    border-top 1px solid #eee
    padding 16px
    font-size 16px
    line-height 16px
    color #666
    position relative

    &:first-of-type
      border-top none

    &:after
      content ''
      display block
      clear both

    &:active
      background-color rgba(#000, 0.05)

    span
      font-size 12px
      display block

  .icon
    margin-right 0.5em

  .switch, .group
    position absolute
    top 18px
    right 16px

  .group
    height 28px
    line-height @height

    .btn
      border 0
      background none
      padding 0
      margin 0
      color inherit
      font-size 24px
      float left

    .icon
      margin-right 0

    .hint
      display block
      text-align center
      float left
      padding 0 24px
      font-size 16px

  .r
    float right
    margin-right 0
    font-size 1.2em
    color #ddd

.list-card
  .theme-night &
    .item
      background-color #666
      &:visited
        h1
          color #ddd
        .subtitle
          color #ccc
    h1
      color #fff
    .subtitle
      color #eee
  .item
    display block
    margin 16px
    padding 8px
    background-color #fff
    box-shadow 0 1px 2px rgba(#000, 0.1)
    position relative

    &:visited
      h1
        color #999
      .subtitle
        color #ccc

    &:active
      .a
        &:after
          content ''
          display block
          position absolute
          width 100%
          padding-top 56.25%
          left 0
          top 0
          background-color rgba(#000, 0.1)

    &.img-hidden
      pointer-events none
      .a
        background-image none !important

  .a
    width 100%
    background center center no-repeat
    background-size cover !important
    position relative
    &:before
      content ''
      display block
      padding-top 56.25%

  .b
    display block
    padding 8px 0
    &:after
      content ''
      display block
      clear both

    .icon
      display block
      float left
      width 40px
      height @width
      line-height @width
      text-align center
      font-size @width
      margin -2px 8px 0 0
      color #ccc

  h1
    font-size 16px
    margin 0
    word-break break-all
    white-space normal
    line-height 1.2
    color #333

  .subtitle
    font-size 12px
    margin 2px 0 0
    word-break break-all
    white-space normal
    line-height 1.2
    color #666

.block-user
  line-height 64px
  font-size 16px

  .item
    line-height inherit

  .avatar
    width 64px
    height @width
    background-color #333
    background-position center center
    background-repeat no-repeat
    background-size cover !important
    border-radius 50%
    float left
    margin-right 16px
    transform-origin bottom

  .name
    float left

.block-title
  margin 1em 16px
  font-size 16px
  line-height @font-size
  color #666
  cursor default

  &:before
    content ''
    display block
    size 12px
    border-radius 2px
    float left
    margin 2px 0.5em 0 0
    background-color $color-main
    background-image linear-gradient(45deg, $color-main, $color-main - 20%)
    transform scale(0.8) rotate(45deg)

  &:after
    content ''
    display block
    clear both

  .theme-night &
    color #ccc
    &:before
      background-color $color-night
      background-image linear-gradient(30deg, $color-night, $color-night - 50%)

.list-tag

  .theme-night &
    .item
      color #ccc
      background-color #555
      border-color #444

      &:active
        color #eee
        background-color #5c5c5c

  .item
    display inline-block
    box-sizing border-box
    height 32px
    line-height @height
    font-size 14px
    color #666
    background-color #f9f9f9
    border 1px solid #eee
    border-radius 4px
    margin 0 4px 8px
    padding 0 8px
    cursor pointer

    &:active
      color #333
      background-color #f6f6f6

    .icon
      margin-right 0.5em

.list-comment

  .theme-night &
    $color = #666
    .item-comment
      border-color #555
      color #ccc

    .quoted
      background-color #555
      border-color #444
      .quoted
        border-top 1px solid #555
        &:first-of-type
          border-top 1px solid #444

    .author
      background-color $color - 10%

    .divider-comment
      background-color $color - 10%

    .unfold
      background-color $color + 10%
      border-color $color - 10%

    .tool
      span
        color #bbb
        &:active
          color #ddd

    .avatar
      border-color #666

    .content-comment
      color #ccc
      a
        color #fff

    .alert
      background-color #444
      border-color #333
      color #999

  > .alert
    margin 16px 24px !important

  .item-comment
    position relative
    width 100%
    height auto
    padding 8px 0
    border-top 1px #eee solid
    color #333
    text-align left

    &:after
      content ''
      display block
      clear both

  > .item-comment:first-of-type
    margin-top 0
    border-top none

  .quoted
    width auto
    height auto
    margin 2px
    border 1px solid #ddd
    background-color #ffe
    padding-top 0
    .quoted
      border-top 1px solid #ffe
      &:first-of-type
        border-top 1px solid #ddd
    .author
      background none
      height 16px
      line-height @height
    .content-comment
      margin 6px 4px 0
      padding 0 0 2px
    .alert
      margin 4px 2px

  .simple
    border-top 1px solid #ffe

  .left
    height 60px
    float left
    position relative

  .right
    margin 0 0 16px 68px
    width auto
    height auto
    position relative
    text-align left

  .avatar
    size 54px
    border 1px solid #fff
    border-radius @width * 0.5 + 1px
    background center center no-repeat
    background-size cover
    margin 0 8px 0 4px
    transform-origin bottom

  .author
    background-color #f5f8fd
    height 24px
    line-height @height
    color #aaa
    position relative
    display block
    width auto
    margin 0 0 2px
    padding 0 0 0 8px
    font-size 12px
    .name
      margin 0 0.2em

  .tool
    margin-left 0.5em
    display inline-block
    position relative
    span
      display inline-block
      margin 0 0.25em 0 0
      padding 0
      font-size 12px
      color #789
      cursor pointer
      &:active
        color #c33
  .content-comment:hover~.author .tool, .author:hover .tool
    display inline-block

  .btn-clear
    float none
    position absolute
    display block
    right 8px
    top -4px

  .name
    color #999

  .date
    color #999

  .content-comment
    font-size 14px
    line-height 1.7
    display block
    width auto
    margin 0
    padding 8px
    white-space pre-wrap
    word-wrap break-word
    .name
      color #369
      font-size 14px
      line-height normal
    .btn
      border-radius 2px
      color #333
      float none
      height 24px
      line-height 20px
      margin 0 4px
      min-width 32px
      width auto
    a
      color #369

  .layer
    font-size 12px
    position absolute
    float right
    right 8px
    bottom 0
    text-align right
    cursor default

  .unfold
    display block
    position relative
    background-color #f9f9f9
    color #999
    width auto
    height auto
    font-size 12px
    text-align left
    border 1px dashed #ddd
    margin 4px 2px 8px
    padding 8px
    cursor pointer

    &.active
      cursor auto
      padding 0

    .tool
      display none!important

  .emotion
    $size = 80px
    max-width $size
    max-height $size
    size auto

  .divider-comment
    position relative
    width 100%
    height 24px
    padding 0
    margin 8px auto
    background-color #f5f8fd
    border 0

  .divider-comment + .item-comment > .quoted
    margin-bottom 8px

  .alert
    margin 16px 2px

  .area-pager
    margin 16px auto
