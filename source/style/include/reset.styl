html
  width 100%
  font-size 10px

body
  -webkit-touch-callout none
  -webkit-text-size-adjust none
  -webkit-user-select none
  background-color #fff
  font-family 'HelveticaNeue-Light', 'HelveticaNeue', Helvetica, Arial, sans-serif
  font-size 1.4rem
  height 100%
  margin 0
  padding 0
  width 100%

div, h1, h2, h3, h4, h5, h6, hr, p, dl, dt, dd, ul, ol, li, form, label
  margin 0
  padding 0

body, button, input, select, textarea
  font-size 100%
  color #666
  outline 0

  &:active, &:focus
    outline 0

h1, h2, h3, h4, h5, h6
  font-size 100%
  font-weight 400

a
  color #606060
  text-decoration none

em, i
  font-style normal

img
  max-width 100%
  border 0

input
  -webkit-appearance none

  &:focus
    border 0
    outline 0

table
  border-collapse collapse
  border-spacing 0

ol, ul, li
  list-style none

textarea
  resize none

// highlight
a, button, input, img, div
  -webkit-tap-highlight-color rgba(#000, 0)
  -webkit-tap-highlight-color transparent