.page
  width 100%
  height 100%
  left 0
  top 0
  background-color #fff
  position absolute
  overflow hidden

  .status-shadowed &
    > .content
      overflow-y hidden

  &.status-blank
    > .content
      opacity 0
      pointer-events none

  > .content
    width 100%
    height 100%
    overflow-x hidden
    overflow-y scroll
    -webkit-overflow-scrolling touch
    margin 0
    position relative
    background-color #eee