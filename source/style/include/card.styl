.card
  display block
  position absolute
  z-index 11
  background-color #fff
  box-shadow 0 0 4px rgba(#000, 0.2)
  text-align center
  font-size 14px
  overflow hidden
  transform translateZ(0)
  will-change opacity, transform

.card-top
  width 100%
  height auto
  left 0
  top 0
  transform-origin top

  .bar-transparent &
    .title
      padding-top 20px

  &.animate-in
    animation animate-in-card-top 250ms ease

  &.animate-out
    animation animate-out-card-top 350ms ease

.card-center
  width 80%
  height auto
  max-height 80%
  left 50%
  top 50%
  transform translate(-50%, -50%)
  border-radius 4px

  &.animate-in
    animation animate-in-card-center 250ms $ease-in-out-back

  &.animate-out
    animation animate-out-card-center 350ms $ease-in-out-back

  .btn-close
    display block
    position absolute
    size 32px
    border-radius 50%
    border 0
    line-height @height
    text-align center
    margin 0
    padding 0
    background-color #eee
    color #ccc
    top 8px
    right 8px

    &:active
      background-color #ddd
      color #999

    .icon
      margin 0

.card-bottom
  width 100%
  height auto
  left 0
  top auto
  bottom 0
  transform-origin bottom

  &.animate-in
    animation animate-in-card-bottom 250ms ease

  &.animate-out
    animation animate-out-card-bottom 350ms ease

// animation
@keyframes animate-in-card-center
  0%
    opacity 0
    transform translate(-50%, -50%) scale(0.95)

  80%, 100%
    opacity 1
    transform translate(-50%, -50%) scale(1)

@keyframes animate-out-card-center
  0%
    opacity 1
    transform translate(-50%, -50%) scale(1)

  80%, 100%
    opacity 0
    transform translate(-50%, -50%) scale(0.95)

@keyframes animate-in-card-top
  0%
    transform translate(0, -640px)

  100%
    transform translate(0, 0)

@keyframes animate-out-card-top
  0%
    transform translate(0, 0)

  100%
    transform translate(0, -640px)

@keyframes animate-in-card-bottom
  0%
    transform translate(0, 640px)

  100%
    transform translate(0, 0)

@keyframes animate-out-card-bottom
  0%
    transform translate(0, 0)

  100%
    transform translate(0, 640px)